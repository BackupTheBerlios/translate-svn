      <label value="&gm-notifier.prefs.newmail.check.label-1;"/>
      <textbox id="gm.prefs.update.interval" style="width:3em;" maxlength="4" value=""/>
      <label value="&gm-notifier.prefs.newmail.check.label-2;" />
    </hbox>

    <checkbox id="gm.prefs.autologin.enabled" label="&gm-notifier.prefs.autologin;"/>
  </groupbox>
-->
</dialog>